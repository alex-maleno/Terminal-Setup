cheat() {
	curl cheat.sh/$(echo $@ | tr ' ' '+')
}
# Function to get the current git branch and status
git_prompt_info() {
  branch=$(git symbolic-ref --short HEAD 2>/dev/null)
  if [ -n "$branch" ]; then
    echo "($branch)"
  fi
}

precmd() {
PROMPT="${GREEN}%n@%m ${BLUE}%~ ${YELLOW}$(git_prompt_info)${RESET} "
}


