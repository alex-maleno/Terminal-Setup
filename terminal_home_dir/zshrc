  eval "$(pyenv init -)"
fi

# Define colors
autoload -U colors && colors
RED="%F{1}"
GREEN="%F{2}"
YELLOW="%F{3}"
BLUE="%F{4}"
MAGENTA="%F{5}"
CYAN="%F{6}"
WHITE="%F{7}"
RESET="%f"
#
# Custom prompt
PROMPT="${GREEN}%n@%m ${BLUE}%~ ${YELLOW}$(git_prompt_info)${RESET} "
